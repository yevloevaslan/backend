{
  "compilerOptions": {
	"experimentalDecorators": true,
	"target": "es5",
	"module": "commonjs",
	"outDir": "dist",
	"strict": false,
	"types": [
	  "node",
	  "jest"
	],
	"moduleResolution": "node",
	"typeRoots": [
	  "./types",
	  "./node_modules/@types"
	],
	"esModuleInterop": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true
  },
  "typeAcquisition": {
	"include": [
	  "jest"
	]
  },
  "ts-node": {
	"transpileOnly": true
  },
  "include": [
	"**/*.ts"
  ]
}